<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/outline_arrow_back_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:tint="#1F2246" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="개인정보 수정"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/btn_back"
            app:layout_constraintStart_toEndOf="@id/btn_back"
            app:layout_constraintTop_toTopOf="@id/btn_back" />

        <EditText android:id="@+id/et_edit_name" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginTop="32dp" android:hint="이름" android:background="@drawable/bg_edittext_rounded" android:paddingStart="15dp" app:layout_constraintTop_toBottomOf="@id/tv_title" />
        <EditText android:id="@+id/et_edit_baby_birth" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginTop="12dp" android:hint="아기 생일 (YYYY-MM-DD)" android:focusable="false" android:background="@drawable/bg_edittext_rounded" android:paddingStart="15dp" app:layout_constraintTop_toBottomOf="@id/et_edit_name" />

        <View android:id="@+id/divider1" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="20dp" android:background="#EEEEEE" app:layout_constraintTop_toBottomOf="@id/et_edit_baby_birth" />

        <EditText android:id="@+id/et_current_pw" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginTop="15dp" android:hint="현재 비밀번호 입력" android:inputType="textPassword" android:background="@drawable/bg_edittext_rounded" android:paddingStart="15dp" app:layout_constraintTop_toBottomOf="@id/divider1" />
        <EditText android:id="@+id/et_edit_pw" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginTop="12dp" android:hint="새 비밀번호" android:inputType="textPassword" android:background="@drawable/bg_edittext_rounded" android:paddingStart="15dp" app:layout_constraintTop_toBottomOf="@id/et_current_pw" />

        <View android:id="@+id/divider2" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="25dp" android:background="#EEEEEE" app:layout_constraintTop_toBottomOf="@id/et_edit_pw" />

        <TextView
            android:id="@+id/label_guardian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="함께 돌보는 보호자"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider2" />

        <ImageButton
            android:id="@+id/btn_add_guardian"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/plus"
            app:layout_constraintBottom_toBottomOf="@id/label_guardian"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/label_guardian" />

        <LinearLayout
            android:id="@+id/layout_guardian_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/label_guardian">

            <LinearLayout
                android:id="@+id/item_empty_guardian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/human" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="추가된 보호자가 없습니다."
                    android:textColor="#888888"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_save_all"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="40dp"
            android:text="모든 변경사항 저장"
            android:backgroundTint="#1F2246"
            app:layout_constraintTop_toBottomOf="@id/layout_guardian_list"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>